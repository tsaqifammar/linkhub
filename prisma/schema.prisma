generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider     = "mysql"
  url          = env("DATABASE_URL")
  relationMode = "prisma"
}

model User {
  id              String        @id @default(cuid())
  username        String        @unique
  email           String        @unique
  name            String?
  password        String
  profilePicture  String?
  accountProvider String        @default("credentials")
  visitCount      Int           @default(0)
  pageSettings    PageSettings?
  links           Json          @default("[]") // shape: { id, title, url, viewCount, thumbnail, enabled }[]
}

model PageSettings {
  id                      String  @id @default(cuid())
  backgroundIsGradient    Boolean @default(false)
  linkhubBackgroundColor1 String  @default("#808080")
  linkhubBackgroundColor2 String  @default("#808080")
  linkhubTextColor        String  @default("#FFFFFF")
  authorId                String  @unique
  author                  User    @relation(fields: [authorId], references: [id])

  @@index([authorId])
}
