generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider     = "mysql"
  url          = env("DATABASE_URL")
  relationMode = "prisma"
}

model User {
  id              String  @id @default(cuid())
  username        String  @unique
  email           String  @unique
  name            String?
  password        String
  profilePicture  String?
  linkhubColor    String  @default("#000")
  accountProvider String  @default("credentials")
  links           Link[]
}

model Link {
  id        String  @id @default(cuid())
  orderNum  Int
  url       String
  title     String
  viewCount Int
  thumbnail String?
  enabled   Boolean @default(true)
  authorId  String
  author    User    @relation(fields: [authorId], references: [id], onDelete: Cascade)

  @@index([authorId])
}
